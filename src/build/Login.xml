<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Login Functionality">
    <test  name="Login Functionality : Verify user login" verbose="2">
        <classes>
            <class name="Tests.LoginTests">
                <methods>
                    <include name="Verify_the_fields_display_on_Login_screen"></include>
                    <include name="Verify_the_navigation_by_clicking_on_Back_icon"></include>
                    <include name="Verify_login_without_any_credential"></include>
                    <include name="Verify_Enter_your_email_field_by_entering_invalid_email_id"></include>
                    <include name="Verify_Enter_your_email_field_by_entering_valid_email_id"></include>
                    <include name="Verify_login_by_only_entering_password"></include>
                    <include name="Verify_login_with_valid_email_Id_and_invalid_password"></include>
                    <include name="Verify_login_with_valid_credentials"></include>
                    <include name="Verify_Forgot_Password_link"></include>
                    <include name="Verify_submit_button_without_entering_email_id"></include>
                    <include name="Verify_Enter_your_email_field_by_entering_non_registered_email_id"></include>
                    <include name="Verify_Enter_your_email_field"></include>
                    <include name="Verify_the_fields_display_on_reset_password_screen"></include>
                    <include name="Verify_the_Eye_icon_functionality_for_New_Password_field"></include>
                    <include name="Verify_the_Confirm_Password_field_by_entering_different_password_than_New_Password_field"></include>
                    <include name="Verify_the_Resend_OTP_link"></include>
                    <include name="Verify_the_6_digit_code_field_by_entering_wrong_code"></include>
                    <include name="Verify_the_UI_of_Splash_screen"></include>
                </methods>
            </class>
        </classes>
    </test>
</suite>